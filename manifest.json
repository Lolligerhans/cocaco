{
    "name": "Colonist Resource Card Counter",
    "short_name": "Card Counter",
    "manifest_version": 3,
    "author": "Lolligerhans",
    "description": "Counts resource cards on colonist.io",
    "version": "0.0.2",
    "icons": {
        "64": "icon64.png"
    },
    "host_permissions": [
        "https://colonist.io/*"
    ],
    "content_scripts": [
        {
          "matches": ["https://colonist.io/*"],
          "css": ["styles.css"],
          "run_at": "document_idle",
          "js": ["explorer.js", "plot.js", "plotly-2.20.0.min.js"]
        }
      ]
}
